@page
@model IndexModel

<!DOCTYPE html>
<html>
<head>
    <title>Registro de Empleados</title>
    <style>
        body {
            font-family: 'Times New Roman', Times, serif, sans-serif;
        }
        .datos.coleccion {
            margin: 20px;
        }
        .display-4 {
            font-size: 2.5rem;
            font-weight: bold;
        }
        form {
            display: flex;
            flex-direction: column;
            max-width: 500px;
            margin: 0 auto;
        }
        input[type="text"],
        input[type="number"],
        input[type="date"] {
            margin-bottom: 10px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="datos coleccion">
        <h1 class="display-4">Registro Departamento</h1>
        <p>Ingrese los siguientes datos según corresponde.</p>
        <form id="registroForm">
              <input type="text" id="name" name="name" placeholder="Nombre departamento" required />
                <input type="text" id="lastname1" name="lastname" placeholder="Codigo departamento" required />
                <input type="text" id="Jefe" name="Jefe" placeholder="Jefe" required />



            <label for="role">Leer base de datos y mostrar en formato emleados:</label>
            <select id="role" name="role" required>
                <option value="" disabled selected>Seleccione una opción</option>
                <option value="empleado">Empleado</option>
                <option value="jefedepartamento">Jefe de Departamento</option>
            </select>
          
            
            <button type="submit">Guardar</button>
        </form>
    </div>
</body>
</html>
